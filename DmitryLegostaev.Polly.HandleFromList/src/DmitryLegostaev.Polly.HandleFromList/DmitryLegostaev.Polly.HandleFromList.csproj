<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <EnforceCodeStyleInBuild>True</EnforceCodeStyleInBuild>
    <Title>$(AssemblyName)</Title>
    <Authors>Dmitry Legostaev</Authors>
    <Description>A small class library to expand Polly PolicyBuilder with handling exceptions from exceptions list.</Description>
    <Copyright>$(Authors)</Copyright>
    <Version>1.0.0</Version>
    <PackageProjectUrl>https://github.com/DmitryLegostaev/DmitryLegostaev.Polly.HandleFromList</PackageProjectUrl>
    <RepositoryUrl>https://github.com/DmitryLegostaev/DmitryLegostaev.Polly.HandleFromList</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageIcon>package-icon.png</PackageIcon>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageTags>Polly, Exceptions, Handling</PackageTags>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RootNamespace>DmitryLegostaev.Polly.HandleFromList</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\..\package-icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Polly" Version="7.2.4" AllowedVersions="[7.2.4]" />
  </ItemGroup>

</Project>
